<div class="container">
  <div class="flex-container flex-container-style fixed-height">
    <div class="flex-item"><span contenteditable="">
        <h1>Nutrain</h1>
      </span></div>
  </div>
  <div class="row">
    <h4>User: <%= current_user.fullname %></h4>
    <h4>Info: Routines report</h4>
    <h4>Date: <%= Date.today.strftime("%Y-%m-%d") %></h4>
    <br>
  </div>
  <br>
  
  <% routines.each do |routine| %>
    <h3><%= routine.name %></h3>
    <table class="table">
      <tr>
        <th class="text-center">Description</th>
        <td class="text-center"><%= routine.description %></td>
      </tr>
      <tr>
        <th class="text-center">Number of exercises</th>
        <td class="text-center"><%= routine.days_of_exercise %></td>
      </tr>
      <tr>
        <th class="text-center">Routine goal</th>
        <td class="text-center"><%= routine.goal %></td>
      </tr>
      <tr>
        <th class="text-center">Created at</th>
        <td class="text-center"><%= routine.created_at.strftime("%Y-%m-%d") %></td>
      </tr>
    </table>
    <br><br>
  <% end %>
</div>
