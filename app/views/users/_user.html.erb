<div class="table-responsive">
  <table class="table table-hover table-details">
    <tr>
      <th>Name</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>Lastname</th>
      <td><%= @user.lastname %></td>
    </tr>
    <!--
    <tr>
      <th>Age</th>
      <td><%= @user.age %></td>
    </tr>
    <tr>
      <th>Height</th>
      <td><%= @user.height %></td>
    </tr>
    <tr>
      <th>Weight</th>
      <td><%= @user.weight %></td>
    </tr>
    -->
    <tr>
      <th>Email</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>Gender</th>
      <td><%= @user.gender %></td>
    </tr>
    <tr>
      <th>Phone</th>
      <td><%= @user.phone %></td>
    </tr>
    <tr>
      <th>City</th>
      <td><%= @user.city %></td>
    </tr>
    <tr>
      <th>Country</th>
      <td><%= @user.country %></td>
    </tr>
    <% if @user.type == 'Professional' %>
      <tr>
        <th>Nutritionist</th>
        <td><%= @user.is_nutritionist? %></td>
      </tr>
      <tr>
        <th>Personal trainer</th>
        <td><%= @user.is_trainer? %></td>
      </tr>
      <tr>
        <th>Physiotherapist</th>
        <td><%= @user.is_physiotherapist? %></td>
      </tr>
      <tr>
        <th>Psychologist</th>
        <td><%= @user.is_psychologist? %></td>
      </tr>
    <% end %>
  </table>
</div>
<div class="d-flex justify-content-start">
  <% if current_user.type == 'Admin' %>
    <div class="p-2">
      <%= link_to 'Delete', user_path(@user), method: :delete, class: 'btn' %>
    </div>
  <% elsif current_user.type == 'Professional' && @user.has_contract?(current_user.id) %>
    <%= render 'professional_actions', user: @user %>
  <% end %>
</div>
