<%= simple_form_for @user, wrapper: :horizontal_form do |f| %>
    <%= f.input :name %>
    <%= f.input :lastname %>
    <%= f.input :gender, collection: ['Male', 'Female'], prompt: 'Select gender' %>
    <%= f.input :phone %>
    <%= f.input :city %>
<!--
    <%#= f.input :country %>
-->
    <%= f.input :type, collection: ['Admin', 'Client', 'Professional'], include_blank: false %>
    
    <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
