<div class="container p-3 col-6">
  <div class="card">
    <div class="card-header d-flex">
      <div class="mr-auto">
        <h2>User details</h2>
      </div>
      <% if current_user.id == @user.id %>
        <%= link_to 'Edit', edit_user_registration_path(@user), class: 'btn' %>
      <% end %>
      <%= link_to 'Back', :back, class: 'btn' %>
    </div>
    <div class="card-body">
      <%= render 'user' %>
    </div>
  </div>
</div>
