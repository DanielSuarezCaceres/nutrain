<div class="container p-3 col-6">
  <div class="card">
    <div class="card-header d-flex">
      <h2>User details</h2>
      <% if current_user.id == @user.id %>
        <%= link_to 'Edit', edit_user_registration_path(@user), class: 'btn ml-auto' %>
      <% end %>
    </div>
    <div class="card-body">
      <%= render 'user' %>
    </div>
  </div>
</div>
