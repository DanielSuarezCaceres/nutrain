<div class="d-flex justify-content-start" id="upper-toolbar">
  <div class="p-2">
    <%= link_to 'New Physio Exercise', new_user_physio_exercise_path(user_id: current_user.id), class: 'btn' %>
  </div>
  <div class="p-2">
    <%= link_to 'Delete all', user_physio_exercises_path(current_user), class: 'btn' %>
  </div>
  <div class="p-2">
    <%= link_to 'Download history', user_physio_exercises_path(current_user, :format => :pdf) , :format => :pdf, target: :_blank, class: 'btn' %>
  </div>
</div>
<div class="d-flex justify-content-center table-title">
  <h3>Physiotherapy Exercises</h3>
</div>

<div class="table-responsive">
  <table class="table table-hover">
    <tr>
      <th class="text-center">Name</th>
      <th class="text-center">Description</th>
      <th class="text-center">Client</th>
      <th class="text-center">Duration</th>
      <th class="text-center">Actions</th>
    </tr>
    <tbody>
      <% @physio_exercises.each do |physio_exercise| %>
        <tr>
          <td class="text-center"><%= physio_exercise.name %></td>
          <td class="text-center"><%= physio_exercise.description %></td>
          <td class="text-center"><%= physio_exercise.client_id %></td>
          <td class="text-center"><%= physio_exercise.duration %></td>
          <td class="text-center"><%= link_to 'Show', physio_exercise %></td>
          <td class="text-center"><%= link_to 'Edit', edit_physio_exercise_path(physio_exercise) %></td>
          <td class="text-center"><%= link_to 'Destroy', physio_exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
