<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>" type="alert">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>
  <% if msg.is_a?(Array) %>
      <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>" type="alert">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <ul>
          <% msg.each do |v| %>
            <li><%= content_tag :div, v, :id => "flash_#{name}" %></li>
          <% end %>
        </ul>
      </div>
  <% end %>
<% end %>