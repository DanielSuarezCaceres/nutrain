<div class="container p-3 col-6">
  <div class="card">
    <div class="card-header">
      <% if @contract.state == 'Pending' %>
        <h2>Contract request</h2>
      <% else %>
        <h2>Edit contract</h2>
      <% end %>
    </div>
    <div class="card-body">
      <%= render 'form', contract: @contract, user_id: current_user.id %>
    </div>
  </div>
</div>
