<%= simple_form_for(@exercise, url: user_exercises_path(user_id: current_user.id)) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :sets %>
  <%= f.input :reps %>
  <%= f.input :weight %>
  <%= f.input :workout_id, collection: current_user.workouts, label_method: :name_and_date, value_method: :id %>

  <%= f.button :submit, class: 'btn' %>
<% end %>