<div class="row">
  <div class="col-md-6">
  <%= simple_form_for(@workout, url: user_workouts_path(user_id: current_user.id), wrapper: :horizontal_form) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name, placeholder: 'Name of your workout' %>
      <%= f.input :description, placeholder: 'Which muscle group are you working on, type of exercise...' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn', id: 'btn-sec' %>
    </div>
  </div>

  <div class="col-md-6">
    <h3>Add exercises to workout</h3>
    <%= f.fields_for :exercises do |exercise| %>
      <%= render 'exercises/exercise_fields', f: exercise %>
    <% end %>
    <div class="link-to-add-association">
      <%= link_to_add_association 'Add exercise', f, :exercises, partial: 'exercises/exercise_fields', class: 'btn', id: 'btn-sec' %>
    </div>
  </div>

  <% end %>
</div>