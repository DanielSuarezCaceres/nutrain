<div class="nested-fields">
  <div class="food-form">
    <%= f.input :name, placeholder: 'Food name' %>
    <%= f.input :brand, placeholder: 'Brand name' %>
    <%= f.input :kcal, placeholder: 'Kcal per 100g' %>
    <%= f.input :protein, placeholder: 'Protein per 100g' %>
    <%= f.input :ch, placeholder: 'Carbohydrates per 100g' %>
    <%= f.input :fats, placeholder: 'Fats per 100g' %>
    <%= f.input :vegan, as: :radio_buttons, collection: [["true", "Yes"], ["false","No"]],
                label_method: :second, value_method: :first %>
    <%= f.input :vegetarian, as: :radio_buttons, collection: [["true", "Yes"], ["false","No"]],
                label_method: :second, value_method: :first %>
    <%= f.input :gluten_free, as: :radio_buttons, collection: [["true", "Yes"], ["false","No"]],
                label_method: :second, value_method: :first %>
    <%= f.input :nut_free, as: :radio_buttons, collection: [["true", "Yes"], ["false","No"]],
                label_method: :second, value_method: :first %>
    <%= f.input :soy_free, as: :radio_buttons, collection: [["true", "Yes"], ["false","No"]],
                label_method: :second, value_method: :first %>
    <%= link_to_remove_association 'Remove ingredient', f , id: 'btn-sec' %>
  </div>
</div>