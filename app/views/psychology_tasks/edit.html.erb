<div class="container p-3 col-6">
  <div class="card">
    <div class="card-header d-flex">
      <div class="mr-auto">
        <h1>Edit psychology task</h1>
      </div>
      <%= link_to 'Back', :back, class: 'btn' %>
    </div>
    <div class="card-body">
      <%= simple_form_for(@psychology_task, url: edit_user_psychology_task_path(params[:client_id].nil? ? params[:user_id] : params[:client_id]),
      method: :put) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <div class="form-inputs">
          <%= f.input :name, placeholder: 'Name of the exercise' %>
          <%= f.input :description, placeholder: 'Give some details: explanations, tips, considerations...' %>
          <%= f.input :goal, placeholder: 'What is the goal of this task?'%>
          <% if @psychology_task.sent_by_id != current_user.id %>
          <%= f.label :Sent_by %>: <%= "#{User.find(@psychology_task.sent_by_id).fullname}"%>
          <% end %>
          <%= f.hidden_field :user_id, value: params[:client_id].nil? ? params[:user_id] : params[:client_id] %>
        </div>
        <br><br>
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
