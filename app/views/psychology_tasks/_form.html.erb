
<%= simple_form_for(@psychology_task) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: 'Name of the exercise' %>
    <%= f.input :description, placeholder: 'Give some details: explanations, tips, considerations...' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
